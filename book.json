{
  "title": "家庭维修手册",
  "author": "_061837@bupt",
  "description": "维修家里常见的各种设备故障",
  "language": "zh",
  "styles": {
    "website": "styles/website.css",
    "ebook": "styles/ebook.css",
    "pdf": "styles/pdf.css",
    "mobi": "styles/mobi.css",
    "epub": "styles/epub.css"
  },
  "plugins": [
        "theme-default"
    ],
  "variables": {
        "theme": "default", 
        "theme-default": {
            "body-background": "#fcfcfc" 
        }
  },
  "pluginsConfig": {
        "sharing": {
            "weibo": true,
            "facebook": true,
            "twitter": true,
            "google": false,
            "linkedin": false,
            "all": ["weibo", "facebook", "twitter"]
        }
  },
  "pdf": {
    "pageNumbers": true,
    "fontSize": 12,
    "fontFamily": "Arial",
    "paperSize": "a4",
    "chapterMark": "pagebreak",
    "pageBreaksBefore": "//*[contains(@class, 'page-break')]",
    "margin": {
      "right": 62,
      "left": 62,
      "top": 56,
      "bottom": 56
    },
    "pdf.imageCompression": "jpeg",
    "pdf.jpegOptimization": true,
    "pdf.linearize": true
  },
  "cover": "./images/covers/cover.jpg"
}